<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:lscyane.Wpf.Controls">
    
    <!-- NumericUpDown.xaml -->
    <Style TargetType="local:NumericUpDown">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:NumericUpDown">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- テキスト部分 -->
                        <TextBox x:Name="PART_TextBox"
                                 Text="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                 VerticalContentAlignment="Center"
                                 HorizontalContentAlignment="Left"
                                 Padding="1"/>
                        
                        <!-- スピンドル部分 -->
                        <Grid Grid.Column="1" Height="{Binding ElementName=PART_TextBox, Path=ActualHeight}" >
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Button Grid.Row="0" x:Name="PART_UpButton" Padding="0" Margin="0" Width="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <Viewbox Margin="1">
                                    <Path Data="M0,9 L6,0 L12,9 Z" Stretch="Uniform" Fill="Black"/>
                                </Viewbox>
                            </Button>
                            <Button Grid.Row="1" x:Name="PART_DownButton" Padding="0" Margin="0" Width="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                <Viewbox Margin="1">
                                    <Path Data="M0,0 L6,9 L12,0 Z" Stretch="Uniform" Fill="Black"/>
                                </Viewbox>
                            </Button>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>